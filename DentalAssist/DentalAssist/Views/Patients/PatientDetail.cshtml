@model Patient

<div class="row">
    <div class="col-md-3">

        <!-- Profile Image -->
        <div class="box box-primary">
            <div class="box-header">
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-toggle="modal" data-target="#patientEditModal">
                        <i class="fa fa-edit"></i>
                    </button>
                </div>
            </div>
            <div class="box-body box-profile">
                <img class="profile-user-img img-responsive img-circle" src="~/img/user1-128x128.jpg" alt="User profile picture">

                <h3 class="profile-username text-center">@Model.FullName</h3>

                <p class="text-muted text-center">Software Engineer</p>
            </div>

            <div class="box-body">
                <strong><i class="fa fa-book margin-r-5"></i> Personal Information</strong>

                <p class="text-muted">SSN: @Model.SSN<br />Birth Date: @Model.BirthDate</p>

                <hr>
                <strong><i class="fa fa-map-marker margin-r-5"></i> Address</strong>
                <p class="text-muted">@Model.Address</p>
                <hr>
                <strong><i class="fa fa-phone margin-r-5"></i> Phones</strong>
                <p class="text-muted">@Model.Phone1 - @Model.Phone2</p>
                <hr>
                <strong><i class="fa fa-envelope margin-r-5"></i> Email</strong>
                <p class="text-muted">@Model.Email</p>

                @*<hr>
                    <strong><i class="fa fa-pencil margin-r-5"></i> Skills</strong>
                    <p>
                        <span class="label label-danger">UI Design</span>
                        <span class="label label-success">Coding</span>
                        <span class="label label-info">Javascript</span>
                        <span class="label label-warning">PHP</span>
                        <span class="label label-primary">Node.js</span>
                    </p>*@

                <hr>
                <strong><i class="fa fa-file-text-o margin-r-5"></i> Notes</strong>

                <p>@Model.Notes</p>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->

    </div>
    <!-- /.col -->
    <div class="col-md-9">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#history" data-toggle="tab">History</a></li>
                <li><a href="#transactions" data-toggle="tab">Financial Transactions</a></li>
            </ul>
            <div class="tab-content">
                <!-- /.tab-pane -->
                <div class="active tab-pane" id="history">
                    <!-- The timeline -->
                    <ul class="timeline timeline-inverse">
                        @foreach (var dentalOperation in Model.DentalOperations)
                        {
                        <!-- timeline time label -->
                        <li class="time-label">
                            <span class="bg-teal">
                                @dentalOperation.StarDate
                            </span>
                        </li>
                            <!-- /.timeline-label -->
                            <!-- timeline item -->
                        <li>
                            <i class="fa fa-user-md bg-yellow"></i>

                            <div class="timeline-item">
                                @if ((int)dentalOperation.Status == 1)
                                    {
                                    <span class="time text-red">@dentalOperation.Status</span>
                                    }
                                    else
                                    {
                                    <span class="time text-green">@dentalOperation.Status</span>
                                    }

                                <h3 class="timeline-header">@dentalOperation.DentalOperationItem.Description</h3>

                                <div class="timeline-body">
                                    @dentalOperation.Notes
                                </div>
                                <div class="timeline-footer">
                                    <a class="btn btn-primary btn-xs">Details</a>
                                </div>
                            </div>
                        </li>
                        }

                        <li>
                            <i class="fa fa-clock-o bg-gray"></i>
                        </li>
                    </ul>
                </div>
                <div class="tab-pane" id="transactions">
                    <!-- Post -->
                    <h3>Financial Transactions...</h3>
                </div>
            </div>
            <!-- /.tab-content -->
        </div>
        <!-- /.nav-tabs-custom -->
    </div>

</div>

<div class="modal fade" id="patientEditModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Edit Patient</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" asp-action="EditPatient">
                    <div class="box-body">
                        <input asp-for="@Model.PatientId" type="hidden">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">First name</label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.FirstName" type="text" class="form-control" placeholder="Enter first name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Last name</label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.LastName" type="text" class="form-control" placeholder="Enter last name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Birth date</label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.BirthDate" type="date" class="form-control" placeholder="Birth date">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">SSN</label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.SSN" type="number" class="form-control" placeholder="ssn">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Address</label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Address" type="tel" class="form-control" placeholder="Address">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Phone1</label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Phone1" type="tel" class="form-control" placeholder="Phone1">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Phone2</label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Phone2" type="tel" class="form-control" placeholder="Phone2">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Email" type="email" class="form-control" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Notes</label>
                            <div class="col-sm-10">
                                <textarea asp-for="@Model.Notes" class="form-control" rows="3" placeholder="Enter ..."></textarea>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary pull-right" style="margin-right: 5px">Submit</button>
                    </div>
                </form>
            </div>
            @*<div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>*@
        </div>
    </div>
</div>
