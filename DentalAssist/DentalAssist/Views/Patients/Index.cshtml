@model IEnumerable<Patient>

<div class="row">
    <div class="col-xs-12">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#patientAddModal">
            <i class="fa fa-user-md"></i> New Patient
        </button>
        @*<button type="button" class="btn btn-danger" style="margin-left: 5px;">
            <i class="fa fa-remove"></i> Delete Patient
        </button>*@
    </div>
</div><br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Search by fullname...">
                <span class="input-group-btn">
                    <button type="submit" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
    </div>
</div>
<br />

<div class="row">
    <div class="col-md-12">
    @foreach (var patient in Model)
    {
        <div class="box-footer box-comments">
            <div class="box-comment">
                <!-- User image -->
                <img class="img-circle img-sm" src="~/img/user1-128x128.jpg" alt="User Image">

                <div class="comment-text">
                    <span class="username">
                        <a asp-controller="Patients" asp-action="PatientDetail" asp-route-id="@patient.PatientId">@patient.FullName</a>
                        <span class="text-muted pull-right"><i class="fa fa-phone"></i> @patient.Phone1</span>
                    </span><!-- /.username -->
                    @patient.Notes
                </div>
                <!-- /.comment-text -->
            </div>
        </div>
    }
    </div>
</div>

@{ 
    var newPatient = new Patient();
}

<div class="modal fade" id="patientAddModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Add Patient</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" asp-action="AddPatient" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">First name</label>
                            <div class="col-sm-10">
                                <input asp-for="@newPatient.FirstName" type="text" class="form-control" placeholder="Enter first name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Last name</label>
                            <div class="col-sm-10">
                                <input asp-for="@newPatient.LastName" type="text" class="form-control" placeholder="Enter last name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Birth date</label>
                            <div class="col-sm-10">
                                <input asp-for="@newPatient.BirthDate" type="date" class="form-control" placeholder="Birth date">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">SSN</label>
                            <div class="col-sm-10">
                                <input asp-for="@newPatient.SSN" type="number" class="form-control" placeholder="ssn">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Address</label>
                            <div class="col-sm-10">
                                <input asp-for="@newPatient.Address" type="tel" class="form-control" placeholder="Address">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Phone1</label>
                            <div class="col-sm-10">
                                <input asp-for="@newPatient.Phone1" type="tel" class="form-control" placeholder="Phone1">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Phone2</label>
                            <div class="col-sm-10">
                                <input asp-for="@newPatient.Phone2" type="tel" class="form-control" placeholder="Phone2">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <input asp-for="@newPatient.Email" type="email" class="form-control" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Notes</label>
                            <div class="col-sm-10">
                                <textarea asp-for="@newPatient.Notes" class="form-control" rows="3" placeholder="Enter ..."></textarea>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary pull-right" style="margin-right: 5px">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
